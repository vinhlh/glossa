{
  "name": "Glossa",
  "description": "Create flashcards when browsing from Oxford Learner's Dictionary",
  "version": "0.0.3",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["static/js/main.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "page": "index.html?app=Background"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Glossa",
    "default_popup": "index.html?app=Popup"
  },
  "chrome_url_overrides": {
    "newtab": "index.html?app=NewTab"
  },
  "permissions": ["http://*/*", "https://*/*", "identity"],
  "icons": {
    "16": "images/icon-19.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; media-src 'self' 'unsafe-inline'",
    "oauth2": {
    "client_id": "",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
